FROM node:18

WORKDIR /app

# Copy package.json and package-lock.json (if available)
COPY package*.json ./

# Install dependencies
RUN npm install

# We're not copying any code files here, as they'll be mounted at runtime

# Build step - adjust this based on your chosen technology
RUN npm run build

# Start the application - adjust this based on your chosen technology
CMD ["npm", "start"]